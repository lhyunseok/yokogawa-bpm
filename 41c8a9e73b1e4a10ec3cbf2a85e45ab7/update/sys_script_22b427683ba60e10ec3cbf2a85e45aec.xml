	var p = current.unit_price;
	var c = current.unit_cost;
	var q = current.item_quantity;
	var m = current.unit_mp


	current.item_total_amount = q * p; 
	var total_amount = current.item_total_amount;
	current.item_total_cost =  q * c;
	var total_cost = current.item_total_cost 
	current.total_mp = q * m;
